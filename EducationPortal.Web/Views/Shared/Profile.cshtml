
@model EducationPortal.Web.Models.UserProfileViewModel

<h2 class="mb-3">User Profile: @Model.Username</h2>

<h3>Enrolled Courses</h3>
@if (Model.EnrolledCourses.Any())
{
    <ul>
        @foreach (var course in Model.EnrolledCourses)
        {
            <li>@course.Name</li>
        }
    </ul>
}
else
{
    <p>No enrolled courses.</p>
}

<h3>Completed Courses</h3>
@if (Model.CompletedCourses.Any())
{
    <ul>
        @foreach (var course in Model.CompletedCourses)
        {
            <li>@course.Name</li>
        }
    </ul>
}
else
{
    <p>No completed courses.</p>
}

<h3>Skills</h3>
@if (Model.Skills.Any())
{
    <ul>
        @foreach (var skill in Model.Skills)
        {
            <li>@skill.Skill.Name (Level @skill.Level)</li>
        }
    </ul>
}
else
{
    <p>No skills acquired.</p>
}

<h3>Completed Materials</h3>
@if (Model.CompletedMaterials.Any())
{
    <ul>
        @foreach (var material in Model.CompletedMaterials)
        {
            <li>@material.Title (@material.GetType().Name)</li>
        }
    </ul>
}
else
{
    <p>No completed materials.</p>
}