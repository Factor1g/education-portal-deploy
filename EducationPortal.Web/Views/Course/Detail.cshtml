@{
}
@using Model
@model CourseDetailViewModel

<h2>Course @Model.Course.Name</h2>
<h4>Description:</h4> @Model.Course.Description</p>

@if (Model.Materials?.Any() ?? false)
{
    <h5>Materials</h5>
    <ul>
        @foreach (var material in Model.Course.Materials.ToList())
        {
            <li>@material.Title (@material.GetType().Name)</li>
        }
    </ul>
}
else
{
    <p><em>No materials available for this course.</em></p>
}

@if (Model.Skills?.Any() ?? false)
{
    <h5>Skills</h5>
    <ul>
        @foreach (var skill in Model.Skills)
        {
            <li>@skill.Name</li>
        }
    </ul>
}
else
{
    <p><em>No skills associated with this course.</em></p>
}

<a asp-action="Index" class="btn btn-secondary">Back to Courses</a>
