@{
}
@model CourseViewModel

<h2>All Courses</h2>

<a asp-action="Create" class="btn btn-success mb-3">+ Create Course</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model.Courses)
        {
            <tr>
                <td>@course.Name</td>
                <td>@course.Description</td>
                <td>
                    @if (Model.IsTeacher || course.CreatorId == Model.CurrentUserId)
                    {
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@course.Id">Edit</a>
                        <form asp-action="Delete" asp-controller="Course" method="post" asp-route-id="@course.Id" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this course?');">Delete</button>
                        </form>
                    }
                    @if (!Model.SubscribedCourseIds.Contains(course.Id))
                    {
                        <form asp-action="Subscribe" method="post" style="display:inline;">
                            <input type="hidden" name="courseId" value="@course.Id" />
                            <button class="btn btn-primary btn-sm" type="submit">Subscribe</button>
                        </form>
                    }
                    else
                    {
                        <span class="text-success">Enrolled</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>