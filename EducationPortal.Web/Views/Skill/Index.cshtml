@{
}
@model SkillListViewModel
@{
    ViewData["Titel"] = "All skills";
}

<h2>Skills</h2>

<a class ="btn btn-success mb-3" asp-controler="Skill" asp-action="Create">+ Create</a>

@if (Model.Skills.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Description
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var skill in Model.Skills)
            {
               <tr>
                   <td>
                       @skill.Name
                   </td>
                    <td>
                        @skill.Description
                    </td>
                    <td>
                        @if (Model.IsTeacher || skill.SkillCreatorId == Model.CurrentUserId)
                        {
                            <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@skill.Id">Edit</a>
                            <form asp-action="Delete" asp-route-id="@skill.Id" method="post" style="display:inline">
                                <button class="btn btn-danger btn-sm" type="submit">Delete</button>
                            </form>
                        }
                    </td>
               </tr> 
            }
        </tbody>
    </table>
}
else
{
    <p>No skills found.</p>
}